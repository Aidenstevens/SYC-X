<template name="caseItem">
    <view class="case-container">
       <view class="case-author-date">
           <image class="case-author" src="{{avatar}}" ></image>
                <text class="case-date">{{date}}</text>
        </view>
           <text class="case-title">{{title}}</text>
            <image class="case-image" src="{{imgSrc}}"></image>
            <text class="case-content">{{content}}
            </text>
            <view class="case-like">
                    <image class="case-like-image" 
                    src="/images/icon/chat.png"></image>
                    <text class="case-like-font">{{collection}}</text>

                    <image class="case-like-image" 
                    src="/images/icon/view.png"></image>
                    <text class="case-like-font">{{reading}}</text>
            </view>
        </view>
</template>